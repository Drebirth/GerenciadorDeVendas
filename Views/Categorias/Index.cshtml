@model IEnumerable<Gerenciador_De_Vendas.Models.CategoriaViewModel>

<h2>Categorias</h2>

<hr />
<div class="row">
	<div class="col-md-12">
		<div>
			<div class="pull-left">
				<a asp-action="CriarCategoria" class="btn btn-primary">
					<span title="Criar Categoria" class="fas fa-plus"></span> Nova Categoria
				</a>
			</div>
		</div>
	</div>
</div>
<br />
<div class="panel panel-default">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(Model => Model.id)
				</th>
				<th>
					@Html.DisplayNameFor(Model => Model.nomeCategoria)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.id)
					</td>
					 <td>
						@Html.DisplayFor(modelItem => item.nomeCategoria)
					</td> 
				
					
				</tr>
			}
		</tbody>
	</table>
</div>


@model Gerenciador_De_Vendas.Entities.Produto;

@{
    ViewData["Title"] = "Deletar produto cadastrado";
}

<h1>Deletar o produto abaixo?</h1>

<form asp-action="Delete" method="post">
<div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Nome"  readonly />
        </div>
</div>
<div class="mb-3 row">
    <label class="col-sm-2 col-from-label">Descricao</label>
        <div class="col-sm-10">
            <input type="text" class="form-control"  asp-for="Descricao" readonly/>
        </div>
</div>
<div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Data de inclusao</label>
        <div class="col-sm-10">
            <input type="datetime" class="form-control" asp-for="Inclusao_Produto" readonly />
        </div>
</div>
<button type="submit" class="btn btn-danger">Deletar</button>
</form>

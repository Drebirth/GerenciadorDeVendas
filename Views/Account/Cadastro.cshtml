@model Gerenciador_De_Vendas.Models.API.UsuarioAPIViewModel

<h2>
	Cadastro de Usuário
</h2>

<form asp-action="CadastrarUsuario" method="post">
	<div>
		<label asp-for="Nome"></label>
		<input asp-for="Nome" />
		<span asp-validation-for="Nome"></span>
	</div>
	<div>
		<label asp-for="Email"></label>
		<input asp-for="Email" />
		<span asp-validation-for="Email"></span>
	</div>
	<div>
		<label asp-for="Senha"></label>
		<input asp-for="Senha" type="password" />
		<span asp-validation-for="Senha"></span>
	</div>
	<div>
		<button class="btn btn-primary" type="submit">Registrar</button>
	</div>
</form>